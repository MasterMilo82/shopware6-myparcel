<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Commands -->
        <service id="Kiener\KienerMyParcel\Command\TestCommand">
            <tag name="console.command"/>
            <argument type="service" id="Kiener\KienerMyParcel\Service\Consignment\ConsignmentService"/>
        </service>

        <!-- Services -->
        <service id="Kiener\KienerMyParcel\Consignment\Service\Consignment\ConsignmentService"
                 class="ConsignmentService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="Kiener\KienerMyParcel\Service\Consignment\ConsignmentService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="Kiener\KienerMyParcel\Service\ShippingMethod\ShippingMethodService" public="true">
            <argument type="service" id="logger"/>
            <argument type="service" id="Kiener\KienerMyParcel\Service\Consignment\ConsignmentService"/>
            <argument type="service" id="kn_my_parcel_shipping_method.repository"/>
            <argument type="service" id="shipping_method.repository"/>
        </service>

        <!-- Entities -->
        <service id="Kiener\KienerMyParcel\Core\Content\ShippingMethod\ShippingMethodDefinition">
            <tag name="shopware.entity.definition" entity="kn_my_parcel_shipping_method"/>
        </service>

    </services>
</container>